{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch FDTD Sim",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/emwave_debug",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "DISPLAY",
                    "value": ":0"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc build for debug"
        }
    ]
}